  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Signup Form",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "sourceMaps": true,
      "webRoot": "../../..",
      "runtimeArgs": [
          "--remote-debugging-port=3000"
