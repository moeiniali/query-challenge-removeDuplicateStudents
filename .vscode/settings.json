   "editor.tokenColorCustomizations": {
      "textMateRules": [
         {
            "scope": "variable",
            "settings": {
               "foreground": "#00b9daf5" // رنگ متغیرها
            }
         },
         {
            "scope": "support.type.property-name",
            "settings": {
               "foreground": "#00c6e0" // رنگ پراپرتی‌ها
            }
         },
         {
            "scope": "variable.parameter",
            "settings": {
               "foreground": "#e000d5e8" // رنگ پارامترها
            }
         },
         {
            "scope": "keyword.operator", // المان های محاسباتی + = _ /
            "settings": {
               "foreground": "#eeff00"
            }
         },
         {
            "scope": "storage.type", //const ها-------------------
            "settings": {
               "foreground": "#e6cf00d2"
            }
         },
         {
            "scope": "variable.other.property",
            "settings": {
               "foreground": "#48ff00cc" // رنگ property ها
            }
         }
      ]
   },
   "editor.inlineSuggest.showToolbar": "always",
}